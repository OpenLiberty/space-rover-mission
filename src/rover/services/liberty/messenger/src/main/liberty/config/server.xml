<server description="Messenger Service">

  <featureManager>
    <feature>jakartaee-9.1</feature>
    <feature>mpConfig-3.0</feature>
    <feature>mpHealth-4.0</feature>
		<feature>restfulWS-3.0</feature>
		<feature>mpMetrics-4.0</feature>
		<feature>mpOpenAPI-3.0</feature>
    <!-- Features for mongo -->
    <!-- <feature>ssl-1.0</feature>
		<feature>passwordUtilities-1.0</feature> -->
  </featureManager>

  <variable name="default.http.port" defaultValue="9085"/>
  <variable name="default.https.port" defaultValue="9448"/>

  <httpEndpoint host="*" httpPort="${default.http.port}" httpsPort="${default.https.port}" id="defaultHttpEndpoint"/>

  <webApplication location="messenger.war" contextRoot="/"/>
</server>
